module snv_indels:
    snakefile:
        github(
            "hydra-genetics/snv_indels",
            path="workflow/Snakefile",
            tag=config["modules"]["snv_indels"],
        )
    config:
        config


use rule deepvariant from snv_indels as snv_indels_deepvariant with:
    input:
        bam=lambda wildcards: get_bam_input(wildcards)[0],
        bai=lambda wildcards: get_bam_input(wildcards)[1],
        ref=config.get("reference", {}).get("fasta", ""),
    output:
        vcf=temp("snv_indels/deepvariant/{sample}_{type}.vcf"),
    log:
        "snv_indels/deepvariant/{sample}_{type}output.log",
    benchmark:
        repeat(
            "snv_indels/deepvariant/{sample}_{type}.output.benchmark.tsv",
            config.get("deepvariant", {}).get("benchmark_repeats", 1),
        )
    message:
        "Call variants with deepvariant on {wildcards.sample}_{wildcards.type}"


use rule deepvariant_gvcf from snv_indels as snv_indels_deepvariant_peddy with:
    input:
        bam=lambda wildcards: get_bam_input(wildcards)[0],
        bai=lambda wildcards: get_bam_input(wildcards)[1],
        ref=config.get("reference", {}).get("fasta", ""),
    output:
        gvcf=temp("snv_indels/deepvariant_peddy/{sample}_{type}.g.vcf"),
        vcf=temp("snv_indels/deepvariant_peddy/{sample}_{type}.vcf"),
    params:
        model=config.get("deepvariant_peddy", {}).get("model", "WGS"),
        extra=config.get("deepvariant_peddy", {}).get("extra", ""),
    log:
        "snv_indels/deepvariant_peddy/{sample}_{type}.output.log",
    benchmark:
        repeat(
            "snv_indels/deepvariant_peddy/{sample}_{type}.output.benchmark.tsv",
            config.get("deepvariant_peddy", {}).get("benchmark_repeats", 1),
        )
    threads: config.get("deepvariant_peddy", {}).get("threads", config["default_resources"]["threads"])
    resources:
        mem_mb=config.get("deepvariant_peddy", {}).get("mem_mb", config["default_resources"]["mem_mb"]),
        mem_per_cpu=config.get("deepvariant_peddy", {}).get("mem_per_cpu", config["default_resources"]["mem_per_cpu"]),
        partition=config.get("deepvariant_peddy", {}).get("partition", config["default_resources"]["partition"]),
        threads=config.get("deepvariant_peddy", {}).get("threads", config["default_resources"]["threads"]),
        time=config.get("deepvariant_peddy", {}).get("time", config["default_resources"]["time"]),
    message:
        "Call variants with deepvariant on {wildcards.sample}_{wildcards.type}"
